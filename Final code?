#include <Servo.h>

Servo servoLeft;
Servo servoRight;

const int LeftLedPin=10, LeftReceiverPin=11;// Select these
const int RightLedPin=2, RightReceiverPin=3;// Select these
const int MidLedPin=6, MidReceiverPin=7;// Select these

int right_prev = 0;
int left_prev = 0;
int randomBit;


void setup() {
  // put your setup code here, to run once:
  tone(4, 3000, 1000);                       // Play tone for 1 second. Work out how long
  delay(1000);   
  pinMode(11, INPUT); 
  pinMode(7, INPUT); 
  pinMode(3, INPUT); 

  pinMode(10, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(2, OUTPUT);

  digitalWrite(10, HIGH);
  digitalWrite(6, HIGH);
  digitalWrite(6, HIGH);

  servoLeft.attach(13);
  servoRight.attach(12);
  
  randomBit = rand() % 2;
  
  Serial.begin(9600);          
}

void loop() 
{
  int frontSensor = irDetectMid(38000);
  int rightSensor = irDetectRight(38000);
  int leftSensor = irDetectLeft(38000);

  if(frontSensor == 0)
  {
    if(right_prev == 1 && rightSensor == 0)
    {
      right();
    }
  
    else if(left_prev == 1 && leftSensor == 0)
    {
      left();
    }
    else if(rightSensor == 0 && leftSensor == 0)
    {
      if (randomBit == 0)
      {
        right();
      }
      else if (randomBit == 1)
      {
        left();
      }
      else 
      {
        forward();
        if (randomBit < 2)
        {
          randomBit += 0.5;
        }
      }
    }
//    else if (rightSensor == 1 && leftSensor == 0)
//    {
//      left();
//    }
//    else if (leftSensor == 1 && rightSensor == 0)
//    {
//      right();
//    }
//    else if (rightSensor == leftSensor)
//    {
//      forward();
//    }
    else {
      forward();
    }
  }
  else
  {
    if (frontSensor == 1)
    {
      if(rightSensor == 1 && leftSensor == 0)
      {
        reverse();
        delay(100);
        left();
        delay(600);
        right_prev = 0;
      }
      else if(leftSensor == 1 && rightSensor == 0)
      {
        reverse();
        delay(100);
        right();
        delay(600);
        left_prev = 0;
      }
      else
      {
        if (randomBit == 0)
        {
          left();
          delay(600);
        }
        else
        {
          right();
          delay(600);
        }
      //if (rightSensor <= leftSensor)
      //{
        //right();
      //}
     // else if (leftSensor < rightSensor)
      //{
       // left();
     // }
      }
    
    }
  }

  right_prev = rightSensor;
  left_prev = leftSensor;
}

void forward()
{
  servoLeft.writeMicroseconds(1600);
  servoRight.writeMicroseconds(1400);

 // servoRight.writeMicroseconds(1300);
  //delay(5000);
  //servoLeft.writeMicroseconds(1510);
  //servoRight.writeMicroseconds(1510);
  //servoRight.writeMicroseconds(1500);

}

void reverse()
{
  servoLeft.writeMicroseconds(1400);
  servoRight.writeMicroseconds(1600);
  //delay(3000);
  //servoLeft.writeMicroseconds(1500);
  //servoRight.writeMicroseconds(1500);
  //delay(1000);

}
void left()
{
  servoLeft.writeMicroseconds(1400);
  servoRight.writeMicroseconds(1400);
  //delay(300);
  //servoLeft.writeMicroseconds(1510);
  //servoRight.writeMicroseconds(1510);
  //delay(1000);
  Serial.println("Going left");

}

void right()
{
  servoLeft.writeMicroseconds(1600);
  servoRight.writeMicroseconds(1600);
  //delay(300);
  //servoLeft.writeMicroseconds(1510);
  //servoRight.writeMicroseconds(1510);
  //```delay(1000);
  Serial.print("Going right");


}

int irDetectLeft(long frequency)
{
  tone(LeftLedPin, frequency, 8);             
  delay(1);                                  
  int ir = digitalRead(LeftReceiverPin);        
  delay(1);  
  if(ir == 0)
  {
    return 1;                                
  }
  return 0;                               
}  

int irDetectRight(long frequency)
{
  tone(RightLedPin, frequency, 8);             
  delay(1);                                  
  int ir = digitalRead(RightReceiverPin);        
  delay(1);                                  
  //return ir; 
  if(ir == 0)
  {
    return 1;                                
  }
  return 0;                               
}  

int irDetectMid(long frequency)
{
  tone(MidLedPin, frequency, 8);             
  delay(1);                                  
  int ir = digitalRead(MidReceiverPin);        
  delay(1);                                  
  //return ir;                               
  if(ir == 0)
  {
    return 1;                                
  }
  return 0; 
}  





